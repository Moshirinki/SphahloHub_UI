<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="productRequest.Name" Label="Name" Required="true" />
        <MudTextField @bind-Value="productRequest.Description" Label="Description" />
        <MudTextField @bind-Value="productRequest.Price" Label="Price" />
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Save" IconColor="Color.Secondary" OnClick="Save" Size="Size.Medium">Save</MudButton>
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Cancel" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>