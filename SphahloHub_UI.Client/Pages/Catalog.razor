@page "/catalog"


<MudGrid>
    @foreach (var product in products)
    {
        <MudItem xs="12" sm="6" md="4">
            <MudCard Class="m-2">
                <MudCardContent>
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">@product.Name</MudText>
                        </CardHeaderContent>
                        <CardHeaderActions>
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@(() => DeleteItem(product.Id))" Color="Color.Error" />
                        </CardHeaderActions>
                    </MudCardHeader>
                    <MudText>@product.Description</MudText>
                    <MudText Color="Color.Primary">@product.BasePrice.ToString("C")</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary">
                        Customize
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>
