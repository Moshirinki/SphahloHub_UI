@page "/cart"

<MudTable Items="_cartService.CartItems">
    <HeaderContent>
        <MudTh>Sphahlo</MudTh>
        <MudTh>Qty</MudTh>
        <MudTh>Total</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context.Sphahlo.Name</MudTd>
        <MudTd>@context.Quantity</MudTd>
        <MudTd>@context.CalculatePrice().ToString("C")</MudTd>
    </RowTemplate>
</MudTable>

<MudText Typo="Typo.h6">Total: @_cartService.GetTotal().ToString("C")</MudText>

<MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="Checkout">
    Checkout
</MudButton>